<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full bg-white p-6 rounded-md">
    <%= turbo_frame_tag 'result' do %>
      <%= form_with url: "/multiply", method: "post", data: { turbo_frame: 'result' }, class: "space-y-4" do |form| %>
        <div>
          <label for="number1" class="block text-sm font-medium text-gray-700">Number 1:</label>
          <%= form.number_field :number1, class: "mt-1 p-2 w-full border rounded-md" %>
        </div>
        
        <div>
          <label for="number2" class="block text-sm font-medium text-gray-700">Number 2:</label>
          <%= form.number_field :number2, class: "mt-1 p-2 w-full border rounded-md" %>
        </div>

        <div>
          <%= form.submit "Multiply", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
